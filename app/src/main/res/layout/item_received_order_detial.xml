<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_bg_item"
    android:padding="@dimen/common_margin">

    <TextView
        android:id="@+id/product_name_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/order_info"
        android:maxLines="2"
        android:textColor="@color/frxs_black"
        android:text="330ml碳酸饮料拉罐6连罐装"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/common_margin">
        <TextView
            android:id="@+id/order_num_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textSize="@dimen/shop_name"
            android:textColor="@color/frxs_red"
            android:text="@string/item_actual_received_num"/>

        <TextView
            android:id="@+id/actual_received_num_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:textSize="@dimen/shop_name"
            android:textColor="@color/frxs_red"
            android:text="@string/item_order_num"/>

    </LinearLayout>

</LinearLayout>