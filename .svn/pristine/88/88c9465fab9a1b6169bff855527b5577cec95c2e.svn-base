<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#99232323"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_white_circle_rectangle"
        android:layout_margin="20dp"
        android:paddingTop="@dimen/common_margin"
        android:orientation="vertical">

        <TextView
            android:id="@+id/product_id_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:textSize="@dimen/shop_name"
            android:textColor="@color/frxs_gray"
            android:text="20170005623457"/>

        <TextView
            android:id="@+id/product_name_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:textSize="@dimen/order_info"
            android:textColor="@color/frxs_black"
            android:textStyle="bold"
            android:text="20170005623457"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5px"
            android:background="@drawable/divider"
            android:layout_marginTop="@dimen/common_padding"
            android:layout_marginBottom="@dimen/common_padding"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"/>

        <TextView
            android:id="@+id/product_barcode_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:textSize="@dimen/shop_name"
            android:textColor="@color/frxs_gray"
            android:text="20170005623457"/>

        <ImageView
            android:id="@+id/product_pic_iv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="20dp"
            android:background="@drawable/shape_bg_item"
            android:padding="@dimen/common_padding"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5px"
                android:background="@color/frxs_gray_dark"/>

            <Button
                android:id="@+id/cancel_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/close"
                android:textStyle="bold"
                android:textSize="@dimen/order_info"
                android:textColor="@color/frxs_gray"
                android:background="@color/frxs_white"
                android:padding="@dimen/fab_margin"/>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>