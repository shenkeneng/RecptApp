<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_bg_item"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/head_layout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/yellow_light"
        android:orientation="horizontal"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tv_order_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:text="8月15日"
            android:textColor="@color/frxs_gray"
            android:textSize="@dimen/fab_margin" />

        <TextView
            android:id="@+id/tv_order_count"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            android:gravity="center"
            android:text="订单数量："
            android:textColor="@color/frxs_gray"
            android:textSize="@dimen/fab_margin" />

        <TextView
            android:id="@+id/tv_actual_number"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="0.5"
            android:gravity="right"
            android:text="实发数量：30"
            android:textColor="@color/frxs_gray"
            android:textSize="@dimen/fab_margin" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5px"
        android:background="@color/frxs_gray_dark" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingTop="@dimen/common_padding"
        android:paddingLeft="@dimen/common_padding"
        android:paddingBottom="@dimen/common_padding">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginRight="@dimen/common_margin">

                <TextView
                    android:id="@+id/order_id_tv"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="20170520235654323"
                    android:textColor="@color/frxs_black_light"
                    android:textSize="@dimen/fab_margin" />

                <TextView
                    android:id="@+id/order_state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="录单"
                    android:textColor="@color/themeColor"
                    android:textSize="@dimen/fab_margin" />

            </LinearLayout>

            <TextView
                android:id="@+id/supplier_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:ellipsize="end"
                android:text="0000110-湖南旺盛酒业贸易有限公司"
                android:textColor="@color/frxs_black_dark"
                android:textSize="@dimen/order_info" />

            <TextView
                android:id="@+id/actual_received_num_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/item_order_num"
                android:textColor="@color/themeColor"
                android:textSize="@dimen/fab_margin" />

        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/ic_mine_right_flag"
            android:layout_marginRight="@dimen/common_padding"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/common_padding"
        android:gravity="right"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_signature"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:background="@drawable/shape_red_btn"
            android:padding="5dp"
            android:text="电子签名"
            android:textColor="@color/frxs_white"
            android:layout_marginRight="5dp"
            android:gravity="center"/>

        <TextView
            android:id="@+id/tv_scan"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:background="@drawable/shape_gray_storke_btn"
            android:padding="5dp"
            android:text="查看二维码"
            android:textColor="@color/frxs_gray"
            android:layout_marginRight="5dp"
            android:gravity="center"/>

        <TextView
            android:id="@+id/tv_print"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:background="@drawable/shape_gray_storke_btn"
            android:padding="5dp"
            android:text=" 打  印 "
            android:textColor="@color/frxs_gray"
            android:layout_marginRight="@dimen/common_margin"
            android:gravity="center"/>
    </LinearLayout>
</LinearLayout>